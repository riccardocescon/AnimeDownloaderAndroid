<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DownloadActivity">

    <TextView
        android:id="@+id/download_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download Anime"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textSize="30dp"
        />

   <FrameLayout
       android:id="@+id/download_fragment"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@+id/download_title"
       android:layout_above="@id/download_bottom_bar"
       />

    <LinearLayout
        android:id="@+id/download_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/download_web_cancel_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#F44336"
            android:text="Cancel"
            android:textColor="#fff"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/download_web_select_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            android:text="Select"
            android:textColor="#fff"
            android:textSize="20dp"
            />

    </LinearLayout>


</RelativeLayout>